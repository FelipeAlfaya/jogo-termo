<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <style name="KeyboardButtonStyle">
            <item name="android:layout_width">40dp</item>
            <item name="android:layout_height">60dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:textSize">30sp</item>
            <item name="android:textColor">#556B2F</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_margin">5dp</item>
            <item name="android:padding">5dp</item>
            <item name="android:elevation">4dp</item>
            <item name="android:shape">rectangle</item>
            <item name="android:buttonCornerRadius">12dp</item>
            <item name="android:backgroundTint">#FFFFFF</item>
        </style>

        <style name="EmptyButtonStyle">
            <item name="android:layout_width">40dp</item>
            <item name="android:layout_height">60dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:alpha">0.5</item>
            <item name="android:textSize">30sp</item>
            <item name="android:textColor">#556B2F</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_margin">5dp</item>
            <item name="android:padding">5dp</item>
            <item name="android:elevation">4dp</item>
            <item name="android:shape">rectangle</item>
            <item name="android:buttonCornerRadius">12dp</item>
            <item name="android:backgroundTint">#000000</item>
            <item name="android:enabled">false</item>
        </style>
    </resources>
